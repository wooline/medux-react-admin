{
  "search.exclude": {
    "**/dist": true,
    "**/node_modules": true
  },
  "files.eol": "\n",
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.formatOnSave": true,
  "typescript.updateImportsOnFileMove.enabled": "never",
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
  // "css.validate": false,
  // "less.validate": false,
  // "scss.validate": false
}
